(if (not (string= dkl-keyboard-name "standard"))
    (user-error "Layout `qwerty-us' must be used with `dkl-keyboard-name' set to \"standard\"")
  (setq dkl--current-layout
        ;; Top row
        '((60 . ("`" "~"))
          (64 . ("1" "!"))
          (68 . ("2" "@"))
          (72 . ("3" "#"))
          (76 . ("4" "$"))
          (80 . ("5" "%"))
          (84 . ("6" "^"))

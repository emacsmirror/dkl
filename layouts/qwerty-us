          (187 . ("e" "E"))
          (191 . ("r" "R"))
          (195 . ("t" "T"))
          (199 . ("y" "Y"))
          (203 . ("u" "U"))
          (207 . ("i" "I"))
          (211 . ("o" "O"))
          (215 . ("p" "P"))
          (219 . ("[" "{"))
          (223 . ("]" "}"))
          (227 . ("\\" "|"))
          ;; Third row
          (300 . ("a" "A"))
